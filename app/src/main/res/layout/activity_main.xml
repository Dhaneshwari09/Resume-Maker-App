<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2"
   >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
           >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#5271ff"
                    android:text="Resume Maker"
                    android:textSize="20dp"
                    android:textStyle="italic"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:layout_marginBottom="10dp"/>
                <EditText
                    android:id="@+id/nameEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Name"
                    android:layout_gravity="center"
                    android:background="@drawable/backgroundcolor"
                    android:padding="10dp"
                    android:layout_margin="10dp"
                    />

                <EditText
                    android:id="@+id/emailEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Email"
                    android:background="@drawable/backgroundcolor"
                    android:padding="10dp"
                    android:layout_margin="10dp"/>

                <EditText
                    android:id="@+id/phoneEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Phone Number"
                    android:background="@drawable/backgroundcolor"
                    android:padding="10dp"
                    android:layout_margin="10dp"/>

                <EditText
                    android:id="@+id/summaryEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Summary"
                    android:background="@drawable/backgroundcolor"
                    android:padding="10dp"
                    android:layout_margin="10dp"/>

                <EditText
                    android:id="@+id/educationEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Education Details"
                    android:background="@drawable/backgroundcolor"
                    android:padding="10dp"
                    android:layout_margin="10dp"/>

                <EditText
                    android:id="@+id/exeperienceEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Experience"
                    android:background="@drawable/backgroundcolor"
                    android:padding="10dp"
                    android:layout_margin="10dp"/>

                <EditText
                android:id="@+id/projectsEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Projects"
                    android:background="@drawable/backgroundcolor"
                    android:padding="10dp"
                    android:layout_margin="10dp"/>

                <EditText
                    android:id="@+id/skillsEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Skills"
                    android:background="@drawable/backgroundcolor"
                    android:padding="10dp"
                    android:layout_margin="10dp"/>


                <EditText
                    android:id="@+id/achievementsEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Achievements"
                    android:background="@drawable/backgroundcolor"
                    android:padding="10dp"
                    android:layout_margin="10dp"/>

                <SeekBar
                    android:id="@+id/fontSizeSeekBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="30"
                    android:min="10"
                    android:progress="14"
                    android:layout_marginTop="20dp" />

                <ImageView
                    android:id="@+id/photoImageView"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"
                    android:src="@drawable/insertimageee"
                    android:contentDescription="Selected Photo" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <Button
                            android:id="@+id/selectPhotoButton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Select Photo"
                            android:layout_gravity="center"
                            android:background="@drawable/bgcolorbutton"
                            android:layout_weight="1"
                            android:textColor="@color/white"
                            android:layout_margin="5dp"
                            android:padding="4dp"
                            />

                        <Button
                            android:id="@+id/selectShapeButton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Select Photo Shape"
                            android:layout_below="@id/selectPhotoButton"
                            android:layout_weight="1"
                            android:background="@drawable/bgcolorbutton"
                            android:textColor="@color/white"
                            android:layout_margin="5dp"
                            android:padding="10dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <Button
                            android:id="@+id/changeBgColorButton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Change Background Color"
                            android:layout_weight="1"
                            android:background="@drawable/bgcolorbutton"
                            android:textColor="@color/white"
                            android:layout_margin="5dp"
                            android:padding="10dp"/>

                        <Button
                            android:id="@+id/changeTextColorButton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Change Text Color"
                            android:layout_weight="1"
                            android:background="@drawable/bgcolorbutton"
                            android:textColor="@color/white"
                            android:layout_margin="5dp"
                            android:padding="10dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                        >
                        <Button
                            android:id="@+id/generatePdfButton"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Generate PDF"
                            android:layout_weight="1"
                            android:background="@drawable/bgcolorbutton"
                            android:textColor="@color/white"
                            android:layout_margin="5dp"
                            android:padding="4dp"/>

                        <Button
                            android:id="@+id/newGeneratePdfButton"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Reset"
                            android:layout_weight="1"
                            android:background="@drawable/bgcolorbutton"
                            android:textColor="@color/white"
                            android:layout_margin="5dp"
                            android:padding="4dp"/>
                </LinearLayout>


        </LinearLayout>

</ScrollView>
